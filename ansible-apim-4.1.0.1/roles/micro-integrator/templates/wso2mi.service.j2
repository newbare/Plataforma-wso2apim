[Unit]
Description=WSO2 Micro Integrator
After=network.target

[Service]
ExecStart={{ carbon_home }}/bin/micro-integrator.sh start
ExecStop={{ carbon_home }}/bin/micro-integrator.sh stop
ExecRestart={{ carbon_home }}/bin/micro-integrator.sh restart
PIDFile={{ carbon_home }}/wso2carbon.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target